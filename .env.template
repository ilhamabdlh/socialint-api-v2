# ============================================================================
# SOCIALINT API - Environment Configuration
# ============================================================================

# MongoDB (REQUIRED)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=social_intelligence

# Google Gemini AI (REQUIRED for Analysis)
GOOGLE_API_KEY=your_google_api_key_here

# Apify API Token (OPTIONAL - for Web Scraping)
# NOTE: Free tier does NOT support TikTok/Instagram/Twitter automated scraping
# Use manual upload instead (see MANUAL_UPLOAD_GUIDE.txt)
APIFY_API_TOKEN=your_apify_api_token_here

# App Settings (OPTIONAL - have defaults)
DEBUG=True
APP_NAME=Social Intelligence API
GEMINI_MODEL=gemini-2.0-flash-exp
MAX_WORKERS=20
BATCH_SIZE=100
ENABLE_AUDIENCE_PROFILING=True
ENABLE_USER_MAPPING=True

